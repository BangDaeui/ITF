<!doctype html>
<html class="no-js h-100" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>In The Forest</title>
    <meta name="description" content="A high-quality &amp; free Bootstrap admin dashboard template pack that comes with lots of templates and components.">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" id="main-stylesheet" data-version="1.1.0" href="/public/styles/shards-dashboards.1.1.0.min.css">
    <link rel="stylesheet" href="/public/styles/extras.1.1.0.min.css">
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script>
        // 체크박스 전체 선택1
        function totalcheck1() {
            if ($("#usercheckall1").is(':checked')) {
                $("input[name=usercheck1").prop("checked", true);
                document.getElementById("useradd").className = "mb-0 btn btn-sm btn-outline-success mr-0";
                document.getElementById("useradd").disabled = false;
            } else {
                $("input[name=usercheck1").prop("checked", false);
                document.getElementById("useradd").className = "mb-0 btn btn-sm btn-outline-secondary mr-0";
                document.getElementById("useradd").disabled = true;
            }
        }

        // button 색 변경1
        function buttoncheck1() {
            var tmp = $("input:checkbox[name=usercheck1]:checked").length;
            if (tmp >= 1) {
                document.getElementById("useradd").className = "mb-0 btn btn-sm btn-outline-success mr-0";
                document.getElementById("useradd").disabled = false;
            } else {
                document.getElementById("useradd").className = "mb-0 btn btn-sm btn-outline-secondary mr-0";
                document.getElementById("useradd").disabled = true;
            }
        }

        // 체크박스 전체 선택2
        function totalcheck2() {
            if ($("#usercheckall2").is(':checked')) {
                $("input[name=usercheck2").prop("checked", true);
                document.getElementById("userdelete").className = "mb-0 btn btn-sm btn-outline-danger mr-0";
                document.getElementById("userdelete").disabled = false;
            } else {
                $("input[name=usercheck2").prop("checked", false);
                document.getElementById("userdelete").className = "mb-0 btn btn-sm btn-outline-secondary mr-0";
                document.getElementById("userdelete").disabled = true;
            }
        }

        // button 색 변경2
        function buttoncheck2() {
            var tmp = $("input:checkbox[name=usercheck2]:checked").length;
            if (tmp >= 1) {
                document.getElementById("userdelete").className = "mb-0 btn btn-sm btn-outline-danger mr-0";
                document.getElementById("userdelete").disabled = false;
            } else {
                document.getElementById("userdelete").className = "mb-0 btn btn-sm btn-outline-secondary mr-0";
                document.getElementById("userdelete").disabled = true;
            }
        }

    </script>
</head>

<body class="h-100">
    <div class="container-fluid">
        <div class="row">
            <!-- Main Sidebar -->
            <aside class="main-sidebar col-12 col-md-3 col-lg-2 px-0">
                <div class="main-navbar">
                    <nav class="navbar align-items-stretch navbar-light bg-white flex-md-nowrap border-bottom p-0">
                        <a class="navbar-brand w-100 mr-0" href="/Dashboard" style="line-height: 25px;">
                            <div class="d-table m-auto">
                                <i class="material-icons">cloud_done</i>
                                <span class="d-none d-md-inline ml-1">In The Forest</span>
                            </div>
                        </a>
                        <a class="toggle-sidebar d-sm-inline d-md-none d-lg-none">
                            <i class="material-icons">&#xE5C4;</i>
                        </a>
                    </nav>
                </div>
                <div class="nav-wrapper">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link " href="/Dashboard">
                                <i class="material-icons">dashboard</i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/EventLog">
                                <i class="material-icons">event</i>
                                <span>Event & Log</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Users">
                                <i class="material-icons">assignment_ind</i>
                                <span>Users</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Systempolicy">
                                <i class="material-icons">computer</i>
                                <span>System Policy</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/Folderpolicy">
                                <i class="material-icons">settings_system_daydream</i>
                                <span>Folder Policy</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Setting">
                                <i class="material-icons">settings</i>
                                <span>Setting</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </aside>
            <!-- End Main Sidebar -->
            <main class="main-content col-lg-10 col-md-9 col-sm-12 p-0 offset-lg-2 offset-md-3">
                <div class="main-navbar sticky-top bg-white">
                    <!-- Main Navbar -->
                    <nav class="navbar align-items-stretch navbar-light flex-md-nowrap p-2">
                        <form action="#" class="main-navbar__search w-100 d-none d-md-flex d-lg-flex">



                        </form>
                        <ul class="navbar-nav border-left flex-row ">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-nowrap px-3" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">

                                    <span class="d-none d-md-inline-block">Administrator</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-small">
                                    <a class="dropdown-item" href="/Setting">
                                        <i class="material-icons">settings</i> Setting</a>
                                    <!--
                                    <a class="dropdown-item" href="#">
                                        <i class="material-icons">vertical_split</i> Blog Posts</a>
                                    <a class="dropdown-item" href="#">
                                        <i class="material-icons">note_add</i> Add New Post</a>
                                    -->
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger" href="/Logout">
                                        <i class="material-icons text-danger">&#xE879;</i> Logout </a>
                                </div>
                            </li>
                        </ul>

                    </nav>
                </div>
                <!-- / .main-navbar -->
                <div class="main-content-container container-fluid px-4">
                    <!-- Page Header -->
                    <div class="page-header row no-gutters py-4 mb-3 border-bottom">
                        <div class="col-12 col-sm-12 text-sm-left mb-0">
                            <span class="text-uppercase page-subtitle">in the forest</span>
                            {{#each dirpolicy}}
                                <h3 class="page-title">{{this.Folder_Name}} 사용자 설정</h3>
                            {{/each}}
                        </div>
                    </div>
                    <!-- End Page Header -->
                    <!-- Start Tables -->
                    <div class="row">
                        <div class="col-lg-6">
                            <form name="Systempolicyuserin" action="/Folderpolicyuserin/{{#each dirpolicy}}{{this.Folder_No}}{{/each}}" method="post">
                                <div class="card card-small mb-4">
                                    <div class="card-header border-bottom">
                                        <button type="button" disabled id="useradd" class="mb-0 btn btn-sm btn-outline-secondary mr-0" data-toggle="modal" data-target="#useraddmodal">Add User into Folder Policy</button>
                                    </div>
                                    <div class="card-body p-0 pb-0 text-center">
                                        <table class="table mb-0">
                                            <thead class="bg-light">
                                                <tr>
                                                    <td>
                                                        <div class="custom-control custom-checkbox mb-0">
                                                            <input type="checkbox" class="custom-control-input" name="usercheckall1" id="usercheckall1" onClick="totalcheck1();">
                                                            <label class="custom-control-label" for=usercheckall1></label>
                                                        </div>
                                                    </td>
                                                    <th scope="col" class="border-0">No</th>
                                                    <th scope="col" class="border-0">Name</th>
                                                    <th scope="col" class="border-0">SMB ID</th>
                                                    <th scope="col" class="border-0">Department</th>
                                                    <th scope="col" class="border-0">Position</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each userexport}}
                                                    <tr>
                                                        <td>
                                                            <div class="custom-control custom-checkbox mb-0">
                                                                <input type="checkbox" class="custom-control-input" name="usercheck1" id="usercheck1{{this.User_No}}" onClick="buttoncheck1()" value="{{this.User_No}}">
                                                                <label class="custom-control-label" for="usercheck1{{this.User_No}}"></label>
                                                            </div>
                                                        </td>
                                                        <td>{{this.User_No}}</td>
                                                        <td>{{this.User_Name}}</td>
                                                        <td>{{this.User_SMB}}</td>
                                                        <td>{{this.Department_Name}}</td>
                                                        <td>{{this.Positions_Name}}</td>
                                                    </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- Modal -->
                                <div class="modal fade" id="useraddmodal" tabindex="-1" role="dialog" aria-labelledby="useraddmodalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="useraddmodalLabel">Add User into Folder Policy</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                사용자를 해당 폴더 정책에 추가하시겠습니까?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-outline-success">Add</button>
                                                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Exit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Modal -->
                            </form>
                        </div>
                        <div class="col-lg-6">
                            <form name="Systempolicyuserin" action="/Folderpolicyuserout/{{#each dirpolicy}}{{this.Folder_No}}{{/each}}" method="post">
                                <div class="card card-small mb-4">
                                    <div class="card-header border-bottom">
                                        <button type="button" disabled id="userdelete" class="mb-0 btn btn-sm btn-outline-secondary mr-0" data-toggle="modal" data-target="#userdeletemodal">Remove User from Folder Policy</button>
                                    </div>
                                    <div class="card-body p-0 pb-0 text-center">
                                        <table class="table mb-0">
                                            <thead class="bg-light">
                                                <tr>
                                                    <td>
                                                        <div class="custom-control custom-checkbox mb-0">
                                                            <input type="checkbox" class="custom-control-input" name="usercheckall2" id="usercheckall2" onClick="totalcheck2();">
                                                            <label class="custom-control-label" for=usercheckall2></label>
                                                        </div>
                                                    </td>
                                                    <th scope="col" class="border-0">No</th>
                                                    <th scope="col" class="border-0">Name</th>
                                                    <th scope="col" class="border-0">SMB ID</th>
                                                    <th scope="col" class="border-0">Department</th>
                                                    <th scope="col" class="border-0">Position</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each userimport}}
                                                    <tr>
                                                        <td>
                                                            <div class="custom-control custom-checkbox mb-0">
                                                                <input type="checkbox" class="custom-control-input" name="usercheck2" id="usercheck2{{this.User_No}}" onClick="buttoncheck2()" value="{{this.User_No}}">
                                                                <label class="custom-control-label" for="usercheck2{{this.User_No}}"></label>
                                                            </div>
                                                        </td>
                                                        <td>{{this.User_No}}</td>
                                                        <td>{{this.User_Name}}</td>
                                                        <td>{{this.User_SMB}}</td>
                                                        <td>{{this.Department_Name}}</td>
                                                        <td>{{this.Positions_Name}}</td>
                                                    </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- Modal -->
                                <div class="modal fade" id="userdeletemodal" tabindex="-1" role="dialog" aria-labelledby="userdeletemodalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="userdeletemodalLabel">Remove User from Folder Policy</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                사용자를 해당 폴더 정책에서 제거 하겠습니까?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-outline-danger">Remove</button>
                                                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Exit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Modal -->
                            </form>
                        </div>
                    </div>
                    <!-- End Tables -->
                </div>
                <footer class="main-footer d-flex p-2 px-3 bg-white border-top">
                    <span class="copyright ml-auto my-auto mr-2">Copyright © 2019
                        <a rel="nofollow">InTheForest</a>
                    </span>
                </footer>
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
    <script src="https://unpkg.com/shards-ui@latest/dist/js/shards.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sharrre/2.0.1/jquery.sharrre.min.js"></script>
    <script src="/public/scripts/extras.1.1.0.min.js"></script>
    <script src="/public/scripts/shards-dashboards.1.1.0.min.js"></script>
    <script src="/public/scripts/app/app-blog-overview.1.1.0.js"></script>
</body>

</html>
