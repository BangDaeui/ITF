    <script>
    // 체크박스 전체 선택
    function Depttotalcheck() {
        if ($("#departmentcheckall").is(':checked')) {
            $("input[name=departmentcheck").prop("checked", true);
            document.getElementById("departmentremove").className = "mb-0 btn btn-sm btn-outline-danger mr-0";
            document.getElementById("departmentremove").disabled = false;
        } else {
            $("input[name=departmentcheck").prop("checked", false);
            document.getElementById("departmentremove").className = "mb-0 btn btn-sm btn-outline-secondary mr-0";
            document.getElementById("departmentremove").disabled = true;
        }
    }

    // button 색 변경
    function Deptbuttoncheck() {
        var tmp = $("input:checkbox[name=departmentcheck]:checked").length;
        if (tmp >= 1) {
            document.getElementById("departmentremove").className = "mb-0 btn btn-sm btn-outline-danger mr-0";
            document.getElementById("departmentremove").disabled = false;
        } else {
            document.getElementById("departmentremove").className = "mb-0 btn btn-sm btn-outline-secondary mr-0";
            document.getElementById("departmentremove").disabled = true;
        }
    }
    </script>
