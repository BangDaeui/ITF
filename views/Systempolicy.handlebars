    <script>
        // 체크박스 전체 선택
        function totalcheck() {
            if ($("#policycheckall").is(':checked')) {
                $("input[name=policycheck").prop("checked", true);
                document.getElementById("policyremove").className = "mb-0 btn btn-sm btn-outline-danger mr-0";
                document.getElementById("policyremove").disabled = false;
            } else {
                $("input[name=policycheck").prop("checked", false);
                document.getElementById("policyremove").className = "mb-0 btn btn-sm btn-outline-secondary mr-0";
                document.getElementById("policyremove").disabled = true;
            }
        }

        // button 색 변경
        function buttoncheck() {
            var tmp = $("input:checkbox[name=policycheck]:checked").length;
            if (tmp >= 1) {
                document.getElementById("policyremove").className = "mb-0 btn btn-sm btn-outline-danger mr-0";
                document.getElementById("policyremove").disabled = false;
            } else {
                document.getElementById("policyremove").className = "mb-0 btn btn-sm btn-outline-secondary mr-0";
                document.getElementById("policyremove").disabled = true;
            }
        }

    </script>
