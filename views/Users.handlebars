                                                                    <table class="table mb-2">
                                                                        <thead class="bg-light text-center">
                                                                            <tr>
                                                                                <th>
                                                                                    <div class="custom-control custom-checkbox mb-0">
                                                                                        <input type="checkbox" class="custom-control-input" name="foldercheckall" id="foldercheckall" onClick="totalcheck();">
                                                                                        <label class="custom-control-label" for=foldercheckall></label>
                                                                                    </div>
                                                                                </th>
                                                                                <th scope="col" class="border-0">No</th>
                                                                                <th scope="col" class="border-0">Name</th>
                                                                                <th scope="col" class="border-0">Path</th>
                                                                                <th scope="col" class="border-0">Comment</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody class="text-center">
                                                                            {{#each folder}}
                                                                                <tr>
                                                                                    <td>
                                                                                    <div class="custom-control custom-checkbox mb-0">
                                                                                        <input type="checkbox" class="custom-control-input" name="foldercheck" id="foldercheck{{this.Folder_No}}" onClick="buttoncheck()" value="{{this.Folder_No}}">
                                                                                        <label class="custom-control-label" for="foldercheck{{this.Folder_No}}"></label>
                                                                                    </div>
                                                                                    </td>
                                                                                    <td>{{this.Folder_No}}</td>
                                                                                    <td>{{this.Folder_Name}}</td>
                                                                                    <td>{{this.Folder_Path}}</td>
                                                                                    <td>{{this.Folder_Comment}}</td>
                                                                                </tr>
                                                                            {{/each}}
                                                                        </tbody>
                                                                    </table>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-outline-success">Add</button>
                                                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Exit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- End User Add Next Modal -->
                            <!-- User Add Modal CSV -->
                            <form action="/Addusercsv" method="post" enctype="multipart/form-data" accept-charset="ISO-8859-1">
                                <div class="modal fade" id="UseraddmodalCSV" tabindex="-1" role="dialog" aria-labelledby="UseraddmodalCSV" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="UseraddmodalCSVLabel">Addusercsv</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
