    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script>
        // User 체크박스 전체 선택
        function totalcheck() {
            if ($("#usercheckall").is(':checked')) {
                $("input[name=usercheck").prop("checked", true);
                document.getElementById("userremove").className = "mb-0 btn btn-sm btn-outline-danger mr-0";
                document.getElementById("userremove").disabled = false;
            } else {
                $("input[name=usercheck").prop("checked", false);
                document.getElementById("userremove").className = "mb-0 btn btn-sm btn-outline-secondary mr-0";
                document.getElementById("userremove").disabled = true;
            }
        }
        // Folder Policy 체크박스 전체 선택
        function totalcheck() {
            if ($("#foldercheckall").is(':checked')) {
                $("input[name=foldercheck").prop("checked", true);
                document.getElementById("folderremove").className = "mb-0 btn btn-sm btn-outline-danger mr-0";
                document.getElementById("folderremove").disabled = false;
            } else {
                $("input[name=foldercheck").prop("checked", false);
                document.getElementById("folderremove").className = "mb-0 btn btn-sm btn-outline-secondary mr-0";
                document.getElementById("folderremove").disabled = true;
            }
        }
        // button 색 변경
        function buttoncheck() {
            var tmp = $("input:checkbox[name=usercheck]:checked").length;
            if (tmp >= 1) {
                document.getElementById("userremove").className = "mb-0 btn btn-sm btn-outline-danger mr-0";
                document.getElementById("userremove").disabled = false;
            } else {
                document.getElementById("userremove").className = "mb-0 btn btn-sm btn-outline-secondary mr-0";
                document.getElementById("userremove").disabled = true;
            }
        }

    </script>
</head>

