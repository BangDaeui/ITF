                    <!-- End Page Header -->
                    <!-- User Table -->
                    <div class="row">
                        <div class="col">
                            <form method="post" id="Userdelete" action="/Deleteuser">
                                <div class="card card-small mb-4">
                                    <div class="card-header border-bottom">
                                        <button type="button" class="mb-0 btn btn-sm btn-outline-primary mr-0" data-toggle="modal" data-target="#Useraddmodal">Add User</button>
                                        &nbsp;
                                        <button type="button" class="mb-0 btn btn-sm btn-outline-primary mr-0" data-toggle="modal" data-target="#UseraddmodalCSV">Add User with CSV</button>
                                        &nbsp;
                                        <button type="button" disabled id="userremove" class="mb-0 btn btn-sm btn-outline-secondary mr-0" data-toggle="modal" data-target="#Userdeletemodal">Delete User</button>
                                    </div>
                                <div class="card-body p-0 pb-3 text-center">
                                    <table class="table mb-0">
                                        <thead class="bg-light">
                                            <tr>
                                                <th scope="col" class="border-0">
                                                    <div class="custom-control custom-checkbox mb-0">
                                                        <input type="checkbox" class="custom-control-input" name="usercheckall" id="usercheckall" onClick="totalcheck();">
                                                        <label class="custom-control-label" for=usercheckall></label>
                                                    </div>
                                                </th>
                                                <th scope="col" class="border-0">No</th>
                                                <th scope="col" class="border-0">Name</th>
                                                <th scope="col" class="border-0">SMB ID</th>
                                                <th scope="col" class="border-0">System Policy</th>
                                                <th scope="col" class="border-0">IP</th>
                                                <th scope="col" class="border-0">Manage</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                          {{#each userslist}}
                                            <tr>
                                                <td>
                                                <div class="custom-control custom-checkbox mb-0">
                                                    <input type="checkbox" class="custom-control-input" name="usercheck" id="usercheck{{this.User_No}}" onClick="buttoncheck()" value="{{this.User_No}}">
                                                    <label class="custom-control-label" for="usercheck{{this.User_No}}"></label>
                                                </div>
                                                </td>
                                                <td>{{this.User_No}}</td>
                                                <td>{{this.User_Name}}</td>
                                                <td>{{this.User_SMB}}</td>
                                                <td>{{this.Policy_Name}}</td>
                                                <td>{{this.User_IP}}</td>
                                                <td>
                                                    <a href="/Userdetail/{{this.User_No}}"><span class="badge badge-pill badge-outline-primary"><i class="material-icons text-primary">add</i> Detail</span></a>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                                <!-- User Delete Modal -->
                                <div class="modal fade" id="Userdeletemodal" tabindex="-1" role="dialog" aria-labelledby="UserdeletemodalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="UserdeletemodalLabel">Delete User</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                사용자를 삭제 하시겠습니까?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                                                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Exit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End User Delete Modal -->
                            </form>
                            <!-- User Add Modal -->
                            <form method=post action="/Adduser">
                                <div class="modal fade" id="Useraddmodal" tabindex="-1" role="dialog" aria-labelledby="UseraddmodalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="UseraddmodalLabel">Add User</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col">
                                                        <div class="form-row">
                                                            <div class="form-group col-md-6">
                                                                <label for="User_Name">사용자이름</label>
                                                                <input type="text" class="form-control" id="User_Name" name="User_Name" placeholder="사용자이름"> </div>
                                                            <div class="form-group col-md-6">
                                                                <label for="User_SMB">SMB ID</label>
                                                                <input type="text" class="form-control" id="User_SMB" name="User_SMB" placeholder="SMB ID"> </div>
                                                        </div>
                                                        <div class="form-row">
                                                            <div class="form-group col-md-6">
                                                                <label for="User_IP">IP</label>
                                                                <input type="text" class="form-control" id="User_IP" name="User_IP" placeholder="IP"> </div>
                                                            <div class="form-group col-md-6">
