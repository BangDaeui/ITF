                                            <div class="modal-body">
                                                <div class="form-group col-md-12">
                                                  <input type="file" class="custom-file-input" id="customFile" name="avatar">
                                                  <label class="custom-file-label" for="customFile">CSV file input</label>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" id="submitForm" class="btn btn-outline-success">Add</button>
                                                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Exit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- End User Add Modal CSV -->
                        </div>
                    </div>
                    <!-- End User Table -->
                </div>
                <footer class="main-footer d-flex p-2 px-3 bg-white border-top">
                    <span class="copyright ml-auto my-auto mr-2">Copyright © 2019
                        <a rel="nofollow">InTheForest</a>
                    </span>
                </footer>
